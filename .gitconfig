[user]
	name = Larry Corsa
	email = larry.corsa@drs.com
[core]
	autocrlf = input
	editor = vim
[commit]
	verbose = true
[diff]
	tool = meld
[merge]
	tool = meld

[alias]
    root = rev-parse --show-toplevel
    s = status -s
    st = status 
    addm = "!f() { git status --porcelain | awk '$1 ~ /M/ {$1=\"\"; $0=$0; $1=$1; printf \"%s\\x0\", $0}' | xargs -r0 git add -fv; }; f"
    ls = ls-files
    logline = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	alias   = config --get-regexp '^alias\\.'
	aliases = config --get-regexp '^alias\\.'

